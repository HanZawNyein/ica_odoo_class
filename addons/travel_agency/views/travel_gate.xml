<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="travel_gate_view_form" model="ir.ui.view">
        <field name="name">travel_gate_view_form</field>
        <field name="model">travel.gate</field>
        <field name="arch" type="xml">
            <form string="travel_gate_form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="township_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="travel_grate_action" model="ir.actions.act_window">
        <field name="name">Gates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">travel.gate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="travel_agency_root" name="Travel Agency">
        <!-- This Menu Item Must have a parent -->
        <menuitem id="configuration_categ" name="Configration" sequence="5">
            <menuitem id="travel_gate_categ" name="Gates" action="travel_grate_action" sequence="5"/>
            <menuitem id="travel_township_categ" name="Township" action="travel_agency.travel_township_action"
                      sequence="0"/>
        </menuitem>
        <!-- This Menu Item Must have a parent -->
        <menuitem id="travel_agency_categ" name="Agency" sequence="0">
            <menuitem id="travel_car_categ" name="Cars" action="travel_car_action"/>
            <menuitem id="travel_agency_model_categ" name="Agency" action="travel_agency_action"/>
        </menuitem>
    </menuitem>
</odoo>